{
    "name": "donaldpittard/shopping-cart",
    "description": "A simple shopping cart application build on slim framework",
    "keywords": ["cart"],
    "homepage": "http://github.com/donaldpittard/shopping-cart",
    "license": "MIT",
    "authors": [
        {
            "name": "Donald Pittard",
            "email": "donaldpittard@gmail.com",
            "homepage": "http://www.donaldpittard.com/"
        }
    ],
    "require": {
        "php": "^7.2.12",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "^5.7",
        "slim/twig-view": "^2.4",
        "bryanjhv/slim-session": "^3.6"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "zeuxisoo/slim-whoops": "0.6.*",
        "heroku/heroku-buildpack-php": "^146.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
